---
interface Props {
  title: string;
  description: string;
  mainClassName?: string;
  bodyClassName?: string;
}

import { cn } from "@/lib/utils";
import Header from "./Header.astro";
import "@/styles/globals.css";

const { title, description, mainClassName, bodyClassName } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Kumanday Software</title>
  </head>

  <body class={cn("min-h-screen flex flex-col relative", bodyClassName)}>
    <Header />

    <main
      class={cn(
        "flex-1 mt-40 xl:mt-52 px-6 md:px-12 lg:px-32 pb-16 2xl:px-52 3xl:px-72 relative z-10",
        mainClassName
      )}
    >
      <slot />
    </main>
  </body>
</html>

<style is:global>
  .dark-overlay::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }

  body {
    background-image: url("/assets/images/bg.jpg");
    background-size: cover;
    background-position: center;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
